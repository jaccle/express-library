<% layout('layout') -%>
    <script src="sorttable.js"></script>
    <div class="container-fluid">
        <div class="row">
        <div class="col-sm-1"></div>
            <div class="col-sm-10">
                <div class="jumbotron">
                    <div class="form-group form-group-lg" style="padding: 2%">
                        <h2>Find a Movie</h2>
                        <form action="/searchresults">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search for..." name="search">
                                <span class="input-group-btn"><button class="btn btn-primary btn-lg" type="submit"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button></span>
                            </div>
                        </form>
                    </div>
                </div>
            <h3>Your Movie List</h3>
                <table class="table table-hover table-condensed sortable">
                    <tr>
                        <th class="col-sm-4">Title</th>
                        <th class="col-sm-1">Year</th>
                        <th class="col-sm-1">Rating</th>
                        <th class="col-sm-1">Genre</th>
                        <th class="col-sm-1">View</th>
                        <th class="col-sm-1">Delete</th>
                    </tr>
                    
                    <% movies.forEach(function (movie) { %>
                    <tr>
            <td class="col-sm-3"><%= movie.Title %></td>
            <td class="col-sm-1"><%= movie.Year %></td>
            <td class="col-sm-1"><%= movie.Rated %></td>
            <td class="col-sm-2"><%= movie.Genre %></td>
            <td class="col-sm-1">
              <a href="/movies/<%= movie.id %>"><button type="button" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-eye-open"></span></button></a>
            </td>
            <td class="col-sm-1">
            <form action="/movies/<%= movie.id %>?_method=delete" method="POST"><button type="submit" class="btn btn-danger btn-xs">
            <span class="glyphicon glyphicon-remove"></span></button>
            </form></td>
                        </td>
                    </tr>
                      <% }) %>
                </table>
            </div>
        </div>
    </div>
    </form>

        <div class="col-sm-1"></div>
</div>


